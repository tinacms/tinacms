{
    "extends": "../../base.tsconfig.json",
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "allowJs": true,
      "declaration": true,
      "esModuleInterop": true,
      "emitDeclarationOnly": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": false,
      "target": "ES6"
    },
    "exclude": [
      "node_modules",
      "dist",
      "src/**/*.test.tsx",
      "src/**/*.test.ts",
      "src/**/*.spec.ts",
      "src/**/*.spec.tsx"
    ],
    "include": ["src"]
  }
  